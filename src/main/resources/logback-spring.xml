<configuration scan="true" debug="false">
    <conversionRule conversionWord="clr" converterClass="org.springframework.boot.logging.logback.ColorConverter"/>

    <property name="CONSOLE_LOG_PATTERN"
              value="%yellow(%d{yyyy-MM-dd HH:mm:ss.SSS}) [%9.9t:${PID:-}] %highlight(%5p) %cyan(%-40.40logger{39}) - %msg%n"/>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${CONSOLE_LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <appender name="ELK" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <pattern>
                    <pattern>
                        {
                        "tags": ["spring-demo-service"],
                        "project": "spring-demo-service",
                        "timestamp": "%date{\"yyyy-MM-dd'T'HH:mm:ss,SSSZ\"}",
                        "log_level": "%level",
                        "thread": "%thread",
                        "class_name": "%class",
                        "line_number": "%line",
                        "message": "%message",
                        "stack_trace": "%exception"
                        }
                    </pattern>
                </pattern>
                <mdc/>
                <arguments/>
            </providers>
        </encoder>
    </appender>

    <springProfile name="local,default">
        <root level="INFO">
            <appender-ref ref="STDOUT"/>
        </root>
        <logger additivity="false" level="DEBUG" name="cn.porsche.demo">
            <appender-ref ref="STDOUT"/>
        </logger>
        <logger additivity="false" level="DEBUG" name="org.springframework.web.filter.CommonsRequestLoggingFilter">
            <appender-ref ref="STDOUT"/>
        </logger>
    </springProfile>

    <springProfile name="dev">
        <root level="INFO">
            <appender-ref ref="ELK" />
        </root>
        <logger additivity="false" level="DEBUG" name="cn.porsche.demo">
            <appender-ref ref="ELK" />
        </logger>
        <logger additivity="false" level="DEBUG" name="org.springframework.web.filter.CommonsRequestLoggingFilter">
            <appender-ref ref="ELK" />
        </logger>
    </springProfile>

    <springProfile name="staging, preprod, prod">
        <root level="INFO">
            <appender-ref ref="ELK"/>
        </root>
    </springProfile>

</configuration>
